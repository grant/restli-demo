extends layout

block scripts
  script(src='/js/jquery.min.js')
  script(src='/js/all.js')

block content
  include /widget/header
  .center
    .content
      .titleBar Create New Project
      .details
        form(action='/project/new' method='post' name='newProject' enctype='multipart/form-data')
          .leftSide
            .fieldArea.title
              .fieldNameArea Title
              .fieldInputArea
                +input(type='text' required=true name='title')
            .fieldArea.location
              .fieldNameArea Location
              .fieldInputArea
                +input(type='text' required=true name='location')
                .inputDescription (e.g., Greenlake, Kirkland, Ballard)
            .fieldArea.type
              .fieldNameArea Type
              .fieldInputArea
                +input(type='text' required=true name='type')
            .fieldArea.description
              .fieldNameArea.nobreak Description
              .fieldInputArea
                +textarea(required=true name='description')
            +button(class='orange' type='submit' text='Create Project')
          .rightSide
            h2.title Before Photo
            .beforePhoto
            +button(class='green' type='file' name='beforePhoto' text='Upload photo')